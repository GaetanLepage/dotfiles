################################################################
# I3
################################################################
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = ${layout.module-padding}
;label-mode-foreground = #000
label-mode-background = ${colors.module-bg}

; focused = Active workspace on focused monitor
label-focused = %icon% %name%
label-focused-background = ${colors.selected-bg}
label-focused-underline= ${colors.text-fg}
label-focused-padding = 3

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-background = ${colors.module-bg}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${colors.module-bg}
label-visible-underline = ${colors.text-fg}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${colors.warn-fg}
label-urgent-underline = ${colors.text-fg}
label-urgent-padding = ${self.label-focused-padding}

; Separator in between workspaces
label-separator = "  "


################################################################
# Spotify
################################################################
[module/spotify]
type = custom/script
interval = 1
click-left = playerctl -p spotify play-pause
click-right = i3-msg 'workspace 9 '
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/spotify.py -f '{artist} ~ {song}' -t 200
format-underline = ${colors.text-fg}


