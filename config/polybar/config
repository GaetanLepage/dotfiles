################################################################
[bar/mainbar-i3]
bottom = true
monitor = ${env:MONITOR}
width = 100%
height = 40
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = ${colors.base-bg}
foreground = ${colors.text-fg}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Ubuntu Nerd Font:style=Book:size=12;1
font-1 = NotoSans Mono:size=8;0

modules-left = i3
modules-center = mpd spotify
modules-right = xbacklight backlight-acpi pulseaudio memory cpu gpu0 updates-arch-combined wlan battery temperature time date

tray-position = ${env:TRAY_POS:none}
tray-padding = ${layout.module-padding}
tray-background = ${colors.base-bg}

wm-restack = i3

override-redirect = false
enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

