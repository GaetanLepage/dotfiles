###########
# BORDERS #
###########

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 2
default_floating_border normal

# Hide borders
hide_edge_borders smart

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 1
bindsym $mod+n border normal


###########################
# GENERAL i3 KEY BINDINGS #
###########################

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart; exec $reload_script

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


################################
# GENERAL WINDOWS KEY BINDINGS #
################################

# kill focused window
bindsym $mod+a kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
# bindsym $mod+Down focus down
# bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth no
bindsym $mod+b workspace back_and_forth
bindsym $mod+less workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

# split orientation
bindsym $mod+g split h;exec notify-send 'tile horizontally'
bindsym $mod+v split v;exec notify-send 'tile vertically'
# bindsym $mod+q split toggle

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky
bindsym $mod+Shift+s sticky toggle

# focus the parent container
bindsym $mod+q focus parent


##################################
# GENERAL WORKSPACE KEY BINDINGS #
##################################

# switch to workspace
bindsym $mod+ampersand workspace $ws1
bindsym $mod+eacute workspace $ws2
bindsym $mod+quotedbl workspace $ws3
bindsym $mod+apostrophe workspace $ws4
bindsym $mod+parenleft workspace $ws5
bindsym $mod+minus workspace $ws6
bindsym $mod+egrave workspace $ws7
bindsym $mod+underscore workspace $ws8
bindsym $mod+ccedilla workspace $ws9
bindsym $mod+agrave workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+eacute move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+egrave move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+ccedilla move container to workspace $ws9
bindsym $mod+Shift+agrave move container to workspace $ws10

# Moving workspaces between screens
bindsym $mod+p move workspace to output right

# move the currently focused window to the scratchpad
bindsym $mod+Shift+comma move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+comma scratchpad show

# navigate workspaces next / previous [MOD+CTRL+ARROWS]
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev
bindsym $mod+Ctrl+Up workspace next
bindsym $mod+Ctrl+Down workspace prev

# navigate workspaces next / previous [MOD+ALT+ARROWS]
bindsym $mod+Mod1+Right workspace next
bindsym $mod+Mod1+Left workspace prev
bindsym $mod+Mod1+Up workspace next
bindsym $mod+Mod1+Down workspace prev

# navigate workspaces next / previous [CTRL+MOD+ARROWS]
bindsym Ctrl+Mod1+Right workspace next
bindsym Ctrl+Mod1+Left workspace prev
bindsym Ctrl+Mod1+Up workspace next
bindsym Ctrl+Mod1+Down workspace prev

# navigate workspaces next / previous [MOD+CTRL+HJKL]
bindsym $mod+Ctrl+l workspace next
bindsym $mod+Ctrl+h workspace prev
bindsym $mod+Ctrl+k workspace next
bindsym $mod+Ctrl+j workspace prev

# navigate workspaces next / previous [MOD+ALT+HJKL]
bindsym $mod+Mod1+l workspace next
bindsym $mod+Mod1+h workspace prev
bindsym $mod+Mod1+k workspace next
bindsym $mod+Mod1+j workspace prev

# navigate workspaces next / previous [CTRL+MOD+HJKL]
bindsym Ctrl+Mod1+l workspace next
bindsym Ctrl+Mod1+h workspace prev
bindsym Ctrl+Mod1+k workspace next
bindsym Ctrl+Mod1+j workspace prev


#######################
# CUSTOM KEY BINDINGS #
#######################

# start a terminal
bindsym $mod+Return exec $terminal

# start program launcher
bindsym $mod+d exec rofi -show run

# Start Applications
bindsym $mod+w exec $browser
bindsym $mod+F3 exec pcmanfm
bindsym $mod+F4 exec kitty --class nvim
bindsym $mod+F6 exec $reload_script
bindsym $mod+F7 exec pkill megasync && megasync
bindsym $mod+F9 exec nmcli radio wifi on
bindsym $mod+Shift+F9 exec nmcli radio wifi off
bindsym $mod+F10 exec rfkill unblock bluetooth
bindsym $mod+Shift+F10 exec rfkill block bluetooth

# vibrance toggle
bindsym $mod+equal exec --no-startup-id vibrance

bindsym $mod+m exec --no-startup-id blueman-manager
bindsym $mod+t exec --no-startup-id pkill picom
bindsym $mod+Ctrl+t exec --no-startup-id picom -b
bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart unst'"
bindsym Print exec --no-startup-id flameshot gui
bindsym $mod+x --release exec --no-startup-id xkill


############################
# SYSTEM/LAPTOP BEHAVIOURS #
############################

# scripts/software started by .xprofile :
# * screens (auto adjust output settings)
# * remaps (keyboard mapping settings)
# * setbg (set the wallpaper)
# * numlockx (enables numlock)
# * picom (composition manager)
# * dunst (notifications)
# * conky_launch
# * polybar_launch

# Lock screen
#bindsym $mod+o exec --no-startup-id i3lock -i ~/.config/i3/lock.png -t

### VOLUME SETTINGS ###
bindsym $mod+Ctrl+m exec pavucontrol
# Volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id volume up 5 #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id volume down 5 #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id volume mute # mute sound
bindsym $mod+Up exec --no-startup-id volume up 5
bindsym $mod+Down exec --no-startup-id volume down 5

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# monitor management
bindsym $mod+F8 exec mons -n right; exec $reload_script
bindsym $mod+Shift+m exec --no-startup-id xrandr_auto
bindsym $mod+c exec "~/.config/i3/laptop_screen_only.sh"

# Screen brightness controls
bindsym XF86MonBrightnessUp exec "xbacklight -inc 10"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


